{{>header}}
<div class="card input">
    <form action="/update-user-v2/{{data._id}}" method ="post" enctype="multipart/form-data" >
    <div class="updateprofileDiv">
        <img src = "../media/{{data.image}}" class="updateProfile">
        </div>
        <label>name</label>
        <input type="text" placeholder="enter name" name="Name" value="{{data.Name}}"/>
        <label>age</label>
        <input type="number" placeholder="age" name="age" value="{{data.age}}" />
        <label>father Name</label>
        <input type="text" placeholder="enter father name" name="fatherName" value="{{data.fatherName}}"/>
        <label>mother Name</label>
        <input type="text" placeholder="enter mother name" name="motherName" value="{{data.motherName}}"/>
        <label>Mobile</label>
        <input type="text" placeholder="enter Mobile number" name="mobile" value="{{data.mobile}}"/>
        <label>address</label>
        <textarea rows = "4" cols = "50"placeholder="Enter address here..."  name="addressName" >{{data.addressName}}</textarea>
        <label>class</label>
        <input type="text" placeholder="enter class" name="className" value="{{data.className}}"/>
        <label>School Name</label>
        <input type="text" placeholder="enter school name" name="schoolName" value="{{data.schoolName}}"/>
        <label> disable</label>
        {{#if data.disability }}
        <label>yes</label>
        <input type="radio" id="disable" name="disability" value="true" checked> 
        <label>no</label>
        <input type="radio" id="disable" name="disability" value="false"/>
        {{else}}
        <label>yes</label>
        <input type="radio" id="disable" name="disability" value="true"> 
        <label>no</label>
        <input type="radio" id="disable" name="disability" value="false" checked/>
        {{/if}}
        <input type="file" name="image"/>
        <div class="buttons"><button type="reset" class="reset">reset</button>
        <button type="submit" class="submit">update profile</button></div>
    </form>
</div>
</body>
</html>